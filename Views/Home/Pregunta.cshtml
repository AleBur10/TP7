<body id="bodyPregunta">
  <div style="margin-left: -6%;">
    <div class="imagenPregunta">
      <img src="/Millonario2.png">
    </div>
    <h1>@ViewBag.Nombre</h1>
    <div id="Pregunta" class="card text-center">
      <div class="card-body">
        <h5 class="card-title">@ViewBag.Pregunta.TextoPregunta</h5>
      </div>
    </div>

    <div class="container text-center">

      <div class="row">
        @for (int i = 0; i < 2; i++)
        {
          <a class="col btn btn-outline-info" id="Caja"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[i].OpcionRespuesta})'>@ViewBag.Respuesta[i].OpcionRespuesta
            @ViewBag.Respuesta[i].TextoRespuesta</a>
        }
      </div>
      <div class="row">

        @if (ViewBag.Respuesta.Count > 2)
        {
          for (int i = 2; i < 4; i++)
          {
            <a class="col btn btn-outline-info" id="Caja"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[i].OpcionRespuesta})'>@ViewBag.Respuesta[i].OpcionRespuesta
              @ViewBag.Respuesta[i].TextoRespuesta</a>
          }
        }
      </div>


      <div class="row comodin">
        <a href='@Url.Action("Uso5050","Home")'><img src="/COMODINES.png"></a>
        <img src="/COMODINES3.png" class="btn">
        <img src="/COMODINES2.png" class="btn">
      </div>
    </div>

    <table id="plataPregunta" class="table">
      <tbody class="table-primary">
        @foreach (var pozo in ViewBag.Pozo)
        {
          <tr>
            <td>$ @pozo.Importe</td>
          </tr>
        }
      </tbody>
    </table>
</body>