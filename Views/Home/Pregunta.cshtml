<body id="bodyPregunta">
  <div style="margin-left: -6%;">
    <div class="imagenPregunta">
      <img src="/Millonario2.png">
    </div>
    <h1>@ViewBag.Nombre</h1>
    <div id="Pregunta" class="card text-center">
      <div class="card-body">
        <h5 class="card-title">@ViewBag.Pregunta.TextoPregunta</h5>
      </div>
    </div>

    <div class="container text-center">
      <div class="row">
        <a class="col btn btn-outline-info" id="Caja"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[0].OpcionRespuesta})'>@ViewBag.Respuesta[0].OpcionRespuesta
          @ViewBag.Respuesta[0].TextoRespuesta</a>
        <a style="margin-left: 2%;" class="col btn btn-outline-info" id="Caja"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[1].OpcionRespuesta})'>@ViewBag.Respuesta[1].OpcionRespuesta
          @ViewBag.Respuesta[1].TextoRespuesta</a>
      </div>
      <div class="row">
        <a class="col btn btn-outline-info" id="Caja2"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[2].OpcionRespuesta})'>@ViewBag.Respuesta[2].OpcionRespuesta
          @ViewBag.Respuesta[2].TextoRespuesta</a>
        <a style="margin-left: 2%;" class="col btn btn-outline-info" id="Caja2"
          href='@Url.Action("PreguntaRespondida","Home", new {opcion=@ViewBag.Respuesta[3].OpcionRespuesta})'>@ViewBag.Respuesta[3].OpcionRespuesta
          @ViewBag.Respuesta[3].TextoRespuesta</a>
      </div>
    </div>
    <div class="row comodin">
      <a href='@Url.Action("DivisionDeOpciones","Home")'><img src="/COMODINES.png"></a>
      <img src="/COMODINES3.png" class="btn">
      <img src="/COMODINES2.png" class="btn">
    </div>
  </div>

  <table id="plataPregunta" class="table">
    <tbody class="table-primary">
      @foreach (var pozo in ViewBag.Pozo)
      {
        <tr>
          <td>$ @pozo.Importe</td>
        </tr>
      }
    </tbody>
  </table>
</body>